<div class="row">
    <div class="col s12 m8">
        <h3>{{doc.title}}
            <small>{{{editIcon doc.user user doc._id false}}}</small>
        </h3>
        <div class="card doc">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{doc.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{doc.user.displayName}}</span>
                <img src="{{doc.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/docs/user/{{doc.user._id}}">More From {{doc.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>